{
  "name": "json-schema-2-graphql-types-converter",
  "version": "2.0.0",
  "description": "Converts JSON schema to GraphQL types",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XaYu/jsonschema2graphql.git"
  },
  "homepage": "https://github.com/XaYu/jsonschema2graphql#readme",
  "bugs": {
    "url": "https://github.com/XaYu/jsonschema2graphql/issues"
  },
  "license": "MIT",
  "keywords": [
    "json-schema",
    "graphql"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "trash build",
    "prepublishOnly": "run-s clean build test",
    "preview": "package-preview ",
    "reset": "git clean -dfx && git reset --hard && yarn install",
    "test": "jest",
    "watch": "run-s clean build && run-p \"build -- -w\" \"test --watch\""
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "camelcase": "^5.0.0",
    "lodash": "^4.17.11",
    "pluralize": "^7.0.0",
    "ramda": "^0.25.0",
    "uppercamelcase": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.0",
    "@types/camelcase": "^4.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^29.5.14",
    "@types/jest-diff": "^20.0.0",
    "@types/jest-matcher-utils": "^21.0.1",
    "@types/json-schema": "^7.0.15",
    "@types/lodash": "^4.14.116",
    "@types/node": "^16.18.125",
    "@types/pluralize": "^0.0.29",
    "@types/ramda": "^0.25.38",
    "@types/uppercamelcase": "^3.0.0",
    "babel-jest": "^29.0.0",
    "fs-extra": "^7.0.0",
    "gh-pages": "^2.0.0",
    "graphql": "^16.10.0",
    "jest": "29.0.0",
    "jest-diff": "^23.6.0",
    "jest-matcher-utils": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "opn-cli": "^3.1.0",
    "package-preview": "^1.0.6",
    "prettier": "^3.4.2",
    "tmp-promise": "^1.0.5",
    "trash-cli": "^1.4.0",
    "ts-jest": "29.2.5",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/matchers/index.ts"
    ],
    "verbose": true
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
